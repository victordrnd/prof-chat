{
  "name": "starter-microservice",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run copy-local-config && nest start --watch",
    "start:devnet:watch": "npm run copy-devnet-config & nest start --watch",
    "start:devnet:debug": "npm run copy-devnet-config & nest start --watch --debug",
    "start:testnet": "npm run copy-testnet-config & nest start",
    "start:testnet:watch": "npm run copy-testnet-config & nest start --watch",
    "start:testnet:debug": "npm run copy-testnet-config & nest start --watch --debug",
    "start:mainnet": "npm run copy-mainnet-config & nest start",
    "start:custom": "npm run copy-custom-config & nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "copy-local-config": "cp ./config/config.local.yaml ./config/config.yaml",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run" : "npm run typeorm migration:run",
    "typeorm": "ts-node ./node_modules/.bin/typeorm"

  },
  "dependencies": {
    "@nestjs/bull": "^0.5.4",
    "@nestjs/common": "^8.2.5",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.2.5",
    "@nestjs/microservices": "^8.2.5",
    "@nestjs/mongoose": "^9.0.1",
    "@nestjs/platform-express": "^8.2.5",
    "@nestjs/platform-socket.io": "^8.2.5",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/typeorm": "^8.0.3",
    "@nestjs/websockets": "^8.2.5",
    "@types/redis": "^4.0.11",
    "agentkeepalive": "^4.2.1",
    "axios": "^0.27.2",
    "bull": "^4.2.0",
    "cache-manager": "^3.6.0",
    "cookie-parser": "^1.4.6",
    "ioredis": "^4.28.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.7.3",
    "mongoose": "^6.0.15",
    "mysql2": "^2.3.3",
    "nest-winston": "^1.6.2",
    "prom-client": "^14.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "socket.io": "^4.4.1",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.45",
    "winston": "^3.4.0",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.5",
    "@types/bull": "^3.15.7",
    "@types/cache-manager": "^3.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.7",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "js-yaml": "^4.1.0",
    "prettier": "^2.5.1",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
